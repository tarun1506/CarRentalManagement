<!DOCTYPE html>
<html>
  <%- include("../templates/head.ejs") %>
  <body>

    <%- include("../templates/navBar.ejs") %>

    <div class="container mt-5">
      <h1 class="text-center mb-4">All Bookings</h1>
      <% if (msg) { %>
          <div class="alert alert-primary">
              <%= msg %>
          </div>
      <% } %>

      <div class="card">
          <div class="card-header">Booking List</div>
          <div class="card-body table-container">
              <table class="table table-bordered table-hover">
                  <thead class="table-secondary">
                      <tr>
                          <th scope="col">Booking ID</th>
                          <th scope="col">Customer Name</th>
                          <th scope="col">Start Date</th>
                          <th scope="col">End Date</th>
                          <th scope="col">Total Cost</th>
                          <th scope="col">Car Model</th>
                          <th scope="col">Make</th>
                          <th scope="col">Year</th>
                          <th scope="col">Color</th>
                          <th scope="col">Category</th>
                          <th scope="col">Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% bookings.forEach(booking => { %>
                          <tr>
                              <td><%= booking.booking_id %></td>
                              <td><%= booking.name %></td>
                              <td><%= booking.start_date %></td>
                              <td><%= booking.end_date %></td>
                              <td>$<%= booking.total_cost %></td>
                              <td><%= booking.model %></td>
                              <td><%= booking.make %></td>
                              <td><%= booking.year %></td>
                              <td><%= booking.color %></td>
                              <td><%= booking.category %></td>
                              <td>
                                  <form action="<%='/bookings/' + booking.booking_id + '/delete'%>" method="POST" style="display: inline;" onsubmit="return confirmDelete();">
                                      <button type="submit" class="btn btn-outline-danger btn-sm">X</button>
                                  </form>
                              </td>
                          </tr>
                      <% }) %>
                  </tbody>
              </table>
          </div>
      </div>
    </div>

    <%- include("../templates/footer.ejs") %>
  </body>

  <script>
    // Confirmation dialog function
    function confirmDelete() {
        return confirm("Are you sure you want to delete this booking?");
    }
  </script>
</html>